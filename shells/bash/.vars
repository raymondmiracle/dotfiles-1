#!/data/data/com.termux/files/usr/bin/env bash

shopt -s checkhash
shopt -s checkwinsize
shopt -s cdable_vars
shopt -s autocd
shopt -s cmdhist
shopt -s dirspell
shopt -s extglob
shopt -s hostcomplete
shopt -s nocaseglob
shopt -s nocasematch

alias cls='clear'
alias cp='cp -i'
alias chip='/storage/DC83-7ECB'
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias dir='dir --color=auto'
alias l='ls --color=auto'
alias l.='ls --color=auto -d .*'
alias ls='ls --color=auto'
alias la='ls --color=auto -a'
alias ll='ls --color=auto -Fhl'
alias ll.='ls --color=auto -Fhl -d .*'
alias ln='ln -i'
alias lo='ls --color=auto -Fho'
alias lo.='ls --color=auto -Fho -d .*'
alias lgo='logout'
alias lsd='ls --color=auto -lF'
alias mv='mv -i'
alias rm='rm -i --preserve-root'
alias vdir='vdir --color=auto -h'
alias x64='qemu-x86_64'

export EDITOR='vim'
export CC='clang'
export CHIP='/storage/DC83-7ECB'
export AS='as'
export AR='ar'
export CXX='clang++'
export LD=ld
export GPG_TTY=$(tty)
